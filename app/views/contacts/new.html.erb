<div class="container">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
            <% if @contact.errors.any? %>
                <div id="error_explanation">
                    <!-- # バリデーションエラーの件数を表示します。 -->
                    <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
                    <ul>
                        <!-- # @contact.errorsは@contactをバリデーションした際のエラー情報です。 -->
                        <!-- # full_messagesは複数のエラーメッセージを表します。 -->
                        <% @contact.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
            <br>
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
            <br>
            <%= f.label :content %>
            <%= f.text_field :content, class: 'form-control' %>
            <br>
            <%= f.submit "確認画面へ", class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
</div>